<% @orders.each do |order| %>
  <tr>
    <td><%= order.uid %></td>
    <td><%= order.description %></td>
    <td><%= order.restaurant %></td>
    <td><%= order.voters %></td>
    <td><%= order.tray %></td>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.city %></td>
    <td><%= order.state %></td>
    <td><%= order.zip %></td>
    <td><%= order.phone %></td>
    <td><%= order.email %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

